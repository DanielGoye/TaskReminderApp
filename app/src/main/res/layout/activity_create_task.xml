<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskActivity">

    <RelativeLayout
        android:id="@+id/editLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/editTaskName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="The title of your task" />

        <EditText
            android:id="@+id/editTaskDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTaskName"
            android:hint="A description of your task"
            android:lines="2" />

        <EditText
            android:id="@+id/editTaskTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editTaskDesc"
            android:hint="Time for your task"
            android:inputType="time"/>

    </RelativeLayout>

    <Button
        android:id="@+id/addTaskBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="ADD TASK" />


</RelativeLayout>